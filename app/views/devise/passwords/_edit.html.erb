  <div class="modal" id="password-edit-modal">
    <div class="modal-contents" id="password-edit-form">
      <img class="form-props-logo" src="..." alt="PROPS">
      <p>パスワードの再設定を行なってください</p>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class:"modal-form",method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>

      <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:"bg-gray password-edit-form",id:"password-edit-email",placeholder:"新しいパスワードを入力してください" %>

      <%= f.password_field :password_confirmation, autocomplete: "off",class:"bg-gray password-edit-form",placeholder:"再度入力してください" %>

      <%= f.submit "パスワードを変更する",class:"form-submit" %>
     <% end %>
