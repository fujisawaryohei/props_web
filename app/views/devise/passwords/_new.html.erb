 <div class="modal" id="password-modal">
   <div class="modal-contents" id="password-form">
     <img class="form-props-logo" src="..." alt="PROPS">
     <p>パスワードを忘れた場合は</p>
         <%= form_for(resource, as: resource_name, url: password_path(resource_name),html:{id:"passwords",class:"modal-form",method: :post} ) do |f| %>

           <%= devise_error_messages! %>

           <%= f.email_field :email, autofocus: true, class:"bg-gray password-form",placeholder:"登録していたメールアドレスを入力してください",id:"password-email",autocomplete: "email" %>

           <%= f.submit "送信",class:"form-submit" %>
          <% end %>
    </div>
  </div>
