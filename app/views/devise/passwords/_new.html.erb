<div class="modal" id="password-edit-modal">
  <div class="modal-contents" id="password-edit-form">
    <img class="form-props-logo" src="..." alt="PROPS">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html:{ method: :post }, html:{class:"modal-form"} ) do |f| %>
      <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  </div>
</div>
<% end %>
