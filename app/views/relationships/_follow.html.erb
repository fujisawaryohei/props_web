
  <% if user_signed_in? %>
    <% if !current_user.following?(@user) %>
      <%= link_to 'フォローする',relationships_path(following_id:@user.id),remote:true,class:"orange-button text-orange",id:"id_following"%>
    <% else %>
      <%= link_to 'フォロー中',relationship_path(following_id:@user.id),remote:true,class:"orange-button",id:"id_unfollowing",method: :delete %>
    <% end %>
  <% end %>
