<div class="box-shadow userpage-content-list-col">
  <div class="song-info-position">
    <img src="..." alt="" class="userpage-post-img">
    <div class="song-info text-white sp-hidden">
      <p class="song-title"><i class="far fa-user"></i>WAY OF GLORY</p>
      <p class="artist"><i class="far fa-dot-circle"></i>AAA</p>
    </div>
  </div>
  <div class="post-user flex sp-hidden">
<!--     <a href="#" class="user-icon user-icon-small"></a> -->
    <%= link_to image_tag(post.user.image, class: "user-icon user-icon-small"), user_path(post.user) %>
    <div class="post-info">
      <% if post.user == current_user %>
        <p class="user-name text-gray"><%= post.user.name %></p>
      <% else %>
        <p class="user-name text-gray"><%= link_to "#{post.user.name}", user_path(post.user) %></p>
      <% end %>
      <p><%= post.title %></p>
    </div>
  </div><!-- /post-user -->
  <hr class="m-0">
  <div class="action post-content-action justify-content-around flex sp-hidden">
    <i class="far fa-comment-dots"><p>12</p></i>
    <i class="fas fa-heart"><p>212</p></i>
    <i class="fas fa-link"><p>106</p></i>
    <i class="fas fa-external-link-alt"></i>
  </div>
</div>