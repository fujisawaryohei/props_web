<div class="box bg-white">
    <div class="ranking-post">
        <p class="ranking-post-title"><i class="far fa-user"></i>投稿ランキング</p>
<!--  side-bar 投稿ランキング ここから繰り返し -->
        <% @side_post_ranks.each do |post| %>
          <div class="post-panel">
              <div class="flex">
                  <p class="post-panel-title mr-auto"><%= post.title %></p>
                  <img src="..." alt="" class="post-panel-image">
              </div>
  <!--             <div class="action" id="post-panel-action">
                  <i class="far fa-comment-dots"><p>58</p></i>
                  <i class="fas fa-heart"><p>2</p></i>
                  <i class="fas fa-link"><p>1</p></i>
              </div> -->
              <div class="action" id="post-content-action">
                <i class="far fa-comment-dots"><p>0</p></i>
                <%= render partial: 'likes/like', locals: { post: post }%>
                <%= render partial: 'clips/clip', locals: { post: post}%>
                <i class="fas fa-external-link-alt"></i>
              </div><!-- /action -->
              <div class="flex">
                  <%= link_to image_tag(post.user.image, class: "user-icon user-icon-mini", id: "post-panel-user-icon"), user_path(post.user) %>
                  <p class="user-name"><%= link_to "#{post.user.name}", user_path(post.user), id: "post-panel-user-name" %></p>
              </div>
              <hr>
          </div><!-- /post-panel -->
        <% end %>
<!--  /side-bar 投稿ランキング ここまで繰り返し -->
        <%= link_to "もっと見る", rankings_post_ranking_path, class: "more" %>
    </div><!-- /ranking-post -->
</div><!-- /box -->