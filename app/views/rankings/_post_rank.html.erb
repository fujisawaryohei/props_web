<div class="ranking-number"><span class="text-white"><%= post_counter + 1 %></span></div>
<div class="post-ranking-content">
  <div class="container pr-0">
    <div class="row">
      <div class="col-left col-md-3 p-0">
        <div class="post-image">
          <!-- <img src="" alt="" class=""> -->
          <%= image_tag "#{ post.track_image }", class: "post-rank-image", style: "height: 140px; width: 100%;" %>
          <div class="song-info text-white">
            <p class="song-title"><i class="far fa-user"></i><%= post.track_name %></p>
            <p class="artist"><i class="far fa-dot-circle"></i><%= post.artist_name %></p>
          </div>
        </div><!-- /post-image -->
      </div>
      <div class="col-right col-md-9">
        <div class="post-user">
          <%= link_to image_tag(post.user.image, class: "user-icon user-icon-mini", style: "height: 50px; width: 50px;"), user_path(post.user) %>
          <p class="user-name text-gray"><%= link_to "#{post.user.name}", user_path(post.user) %></p>
          <p><%= post.title %></p>
        </div><!-- /post-user -->
        <div class="clear"></div>
        <p class="text text-gray"><%= post.text %></p>
      </div>
    </div><!-- /row -->
  </div><!-- /container -->
  <div class="action" id="post-content-action">
    <i class="far fa-comment-dots"><p>0</p></i>
    <%= render partial: 'likes/like', locals: { post: post }%>
    <%= render partial: 'clips/clip', locals: { post: post}%>
    <i class="fas fa-external-link-alt"></i>
  </div><!-- /action -->
</div><!-- /post-ranking-content -->
<hr class="mb-0">